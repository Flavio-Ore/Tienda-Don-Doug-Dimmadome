{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* Shadcn installation */
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@layouts/*": [
        "./src/layouts/*",
      ],
      "@components/*": [
        "./src/components/*",
      ],
      "@shadcn/*": [
        "./src/components/ui/*"
      ],
      "@api/*": [
        "src/services/*"
      ],
      "@pages/*": [
        "./src/pages/*",
      ],
      "@doug-dimadon/*": [
        "./src/services/doug-dimadon/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    //! react-jsx was removed from the list of supported options
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts",
    "tailwind.config.js"
  ],
}